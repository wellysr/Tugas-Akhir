<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".AddDataFlora">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Data Flora" />
    <EditText
        android:id="@+id/create_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Nama" />

    <EditText
        android:id="@+id/create_kerajaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kingdom" />

    <EditText
        android:id="@+id/create_divisi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Divisi"/>

    <EditText
        android:id="@+id/create_kelas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kelas" />

    <EditText
        android:id="@+id/create_famili"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Famili" />

    <EditText
        android:id="@+id/create_karakteristik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:hint="Karakteristik"/>

<!--    <ImageView-->
<!--        android:layout_width="200dp"-->
<!--        android:layout_height="200dp"-->
<!--        android:id="@+id/tampil"/>-->

<!--    <Button-->
<!--        android:id="@+id/up_gambar"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="upload_image" />-->

    <Button
        android:id="@+id/create_btn_flora"
        android:layout_marginTop="10dp"
        android:text="TAMBAH DATA FLORA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".UpdateFlora">
    <TextView
        android:id="@+id/judul_halaman_add_flora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Data Flora" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/judul_halaman_add_flora"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/update_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Nama" />

            <EditText
                android:id="@+id/update_kerajaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kingdom" />

            <EditText
                android:id="@+id/update_divisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Divisi"/>

            <EditText
                android:id="@+id/update_kelas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kelas" />

            <EditText
                android:id="@+id/update_famili"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Famili" />

            <EditText
                android:id="@+id/update_karakteristik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:hint="Karakteristik"/>

            <!--                <ImageView-->
            <!--                    android:layout_width="200dp"-->
            <!--                    android:layout_height="200dp"-->
            <!--                    android:id="@+id/tampil"/>-->

            <!--                <Button-->
            <!--                    android:id="@+id/up_gambar"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:text="upload_image" />-->

            <Button
                android:id="@+id/btn_update_flora"
                android:layout_marginTop="10dp"
                android:text="UPDATE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>